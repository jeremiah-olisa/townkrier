{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version"
    }
  },
  "packages": [
    "packages/core",
    "packages/cli",
    "packages/channels/email/*",
    "packages/channels/push/*",
    "packages/channels/sms/*",
    "packages/channels/in-app/database",
    "packages/channels/in-app/sse",
    "packages/channels/social-media/whatsapp/wasender",
    "packages/channels/social-media/whatsapp/whapi"
  ]
}