# TownKrier Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=development

# ============================================================================
# EMAIL CHANNEL - RESEND
# ============================================================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=notifications@yourdomain.com
RESEND_FROM_NAME=Your App Name
RESEND_ENABLED=true

# ============================================================================
# SMS CHANNEL - TERMII
# ============================================================================
# Get your API key from https://termii.com
TERMII_API_KEY=your_termii_api_key_here
TERMII_SENDER_ID=YourApp
TERMII_CHANNEL=generic
TERMII_ENABLED=true

# ============================================================================
# PUSH CHANNEL - FIREBASE CLOUD MESSAGING (FCM)
# ============================================================================
# Download service account JSON from Firebase Console
# Provide the path to your service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/firebase-service-account.json
# Or provide the JSON content directly (base64 encoded or as string)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}
FIREBASE_PROJECT_ID=your-firebase-project-id
FCM_ENABLED=true

# ============================================================================
# NOTIFICATION MANAGER
# ============================================================================
DEFAULT_NOTIFICATION_CHANNEL=email-resend
ENABLE_FALLBACK=true

# ============================================================================
# QUEUE SYSTEM (Optional - for background processing)
# ============================================================================
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=1000
QUEUE_PROCESSING_INTERVAL=5000

# ============================================================================
# DASHBOARD (Optional - for monitoring)
# ============================================================================
DASHBOARD_ENABLED=false
DASHBOARD_PORT=3000
DASHBOARD_PATH=/dashboard
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme

# ============================================================================
# STORAGE (Optional - for notification logs)
# ============================================================================
STORAGE_ENABLED=false
# For in-memory storage (development)
STORAGE_TYPE=memory
# For database storage (production) - coming soon
# STORAGE_TYPE=database
# DATABASE_URL=postgresql://user:password@localhost:5432/townkrier
