{
  "name": "@townkrier/dashboard",
  "version": "1.0.0-alpha.2",
  "description": "Dashboard UI for TownKrier notifications monitoring - similar to Hangfire",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-views",
    "copy-views": "mkdir -p dist/views && cp -r src/views/* dist/views/",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "dashboard",
    "notifications",
    "monitoring",
    "hangfire",
    "townkrier"
  ],
  "author": "Jeremiah Olisa",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@townkrier/core": "^1.0.0-alpha.2",
    "@townkrier/queue": "^1.0.0-alpha.2",
    "@townkrier/storage": "^1.0.0-alpha.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
