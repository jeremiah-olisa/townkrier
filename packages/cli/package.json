{
  "name": "townkrier-cli",
  "version": "1.0.0-alpha.2",
  "description": "CLI tooling for TownKrier notification system - Laravel-style commands for generating notifications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "townkrier": "./bin/townkrier.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "townkrier",
    "cli",
    "notifications",
    "laravel-notifications",
    "code-generation",
    "scaffolding"
  ],
  "author": "Jeremiah Olisa",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
