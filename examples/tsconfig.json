{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "paths": {
            "townkrier-core": [
                "../packages/core/src"
            ],
            "townkrier-resend": [
                "../packages/channels/email/resend/src"
            ],
            "townkrier-mailtrap": [
                "../packages/channels/email/mailtrap/src"
            ],
            "townkrier-termii": [
                "../packages/channels/sms/termii/src"
            ],
            "townkrier-expo": [
                "../packages/channels/push/expo/src"
            ],
            "townkrier-sse": [
                "../packages/channels/in-app/sse/src"
            ],
            "townkrier-wasender": [
                "../packages/channels/social-media/whatsapp/wasender/src"
            ],
            "townkrier-whapi": [
                "../packages/channels/social-media/whatsapp/whapi/src"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}